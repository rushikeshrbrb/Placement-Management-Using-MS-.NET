@model IEnumerable<WebApplicationIdentity.Models.Company>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "GetAllCompanies";
}

<h1>All Companies</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.nameOfRepresentative)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_No)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.User)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nameOfRepresentative)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact_No)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td> *@
                <td>

                    <a class="nav-link text-dark btn btn-warning" asp-area="" asp-controller="Students" asp-action="JobInfo" asp-route-userId="@item.User.Id">Show Jobs</a>
                   @*  <a asp-action="Details" asp-route-id="@item.Company_Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Company_Id" class="btn btn-danger">Delete</a> *@
                   
                </td>
            </tr>
        }
    </tbody>
</table>
