@{
}

@model IEnumerable<WebApplicationIdentity.Models.AddJobs>

<h1>List of Jobs</h1>


<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-primary">
            <th>Job Id</th>
            <th>Designation</th>
            <th>Specialization</th>
            <th>Experience</th>
            <th>Description</th>
            <th>10th Criteria</th>
            <th>12th Criteria</th>
            <th>Graduation Criteria</th>
            <th>Status</th>
            <th>CTC</th>
            <th>Action</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td>@job.Job_Id</td>
                <td>@job.Designation</td>
                <td>@job.Specialization</td>
                <td>@job.Experience</td>
                <td>@job.Description</td>
                <td>@job._10_cri</td>
                <td>@job._12_cri</td>
                <td>@job.Grad_cri</td>
                <td>@job.Status</td>
                <td>@job.CTC</td>
                <td>
                    <a asp-controller="Companies" asp-action="ViewJobApplications" asp-route-id="@job.Job_Id" class="btn btn-primary">View Applications</a>

                    @*  <a asp-controller="AddJobs" asp-action="EditJobByCompany" asp-route-id="@job.Job_Id" class="btn btn-primary">Edit</a>
                     <a asp-action="Details" asp-route-id="@job.Job_Id" class="btn btn-warning">Details</a> 
                    <a asp-controller="AddJobs" asp-action="DeleteJobByCompany" asp-route-id="@job.Job_Id" class="btn btn-danger">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
