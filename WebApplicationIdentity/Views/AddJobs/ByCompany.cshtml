@model IEnumerable<WebApplicationIdentity.Models.AddJobs>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

@{
    ViewData["Title"] = "ByCompany";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3>Job index</h3>
        </div>
         <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"> </i>  Add New Job </a>
        </div>
    </div>
</div>

<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Designation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._10_cri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model._12_cri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grad_cri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CTC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._10_cri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item._12_cri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grad_cri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Company_Id)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.Job_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Job_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Job_Id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
