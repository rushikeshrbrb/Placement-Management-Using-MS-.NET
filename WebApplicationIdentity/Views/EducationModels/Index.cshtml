@model IEnumerable<WebApplicationIdentity.Models.EducationModel>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3>Educational Details</h3>
        </div>
       @*  <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i> Add Educational details </a>
        </div> *@
    </div>
</div>
<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Class10_Passing_Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class10_Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class12_Passing_Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class12_Percentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Graduation_Completion_Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Graduation_Percentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Class10_Passing_Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class10_Percentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class12_Passing_Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class12_Percentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Graduation_Completion_Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Graduation_Percentage)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentEducation_Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.StudentEducation_Id" class="btn btn-info">Details</a>
                   @*  <a asp-action="Delete" asp-route-id="@item.StudentEducation_Id" class="btn btn-danger">Delete</a> 
 *@            </td>
        </tr>
}
    </tbody>
</table>
